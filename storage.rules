rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Gallery images - authenticated users can upload/delete, everyone can read
    match /gallery/{imageId} {
      // Allow public read access to all gallery images
      allow read: if true;
      
      // Allow authenticated users to upload and delete images
      // This works with Netlify Identity tokens
      allow write, delete: if request.auth != null;
      
      // Validate file size (max 10MB per file) - only for uploads
      allow write: if request.resource == null || request.resource.size < 10 * 1024 * 1024;
      
      // Validate file type (only images) - only for uploads
      allow write: if request.resource == null || request.resource.contentType.matches('image/.*');
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
